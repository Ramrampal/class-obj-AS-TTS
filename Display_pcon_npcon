#include<iostream>
using namespace std;

class stu {
    string name;
    int RN;
    
    public:
    // Default constructor
    stu() {
        name = "";
        RN = 0;
    }
    
    // Parameterized constructor
    stu(string N, int M) {
        name = N;
        RN = M;
    }
    
    // Method to display student details
    void display() {
        cout << "Name: " << name << ", Roll Number: " << RN << endl;
    }
};

int main() {
    // Creating an object using the parameterized constructor
    stu s("Amit", 104);
 
    
    // Displaying the student's details
    s.display();
    
    return 0;
}
