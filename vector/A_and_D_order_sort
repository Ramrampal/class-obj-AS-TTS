#include<iostream>
#include<vector>
#include<algorithm>
using  namespace std;
int main(){
    int n;
    cin>>n;
    vector<int> p(n);
    for(int i=0;i<n;i++){
        cin>>p[i];

    }
  sort(p.begin(),p.end());
      cout << "Ascending order: ";
    for(int i=0;i<n;i++){
        cout<<p[i]<<" ";
    }
    cout<<""<<endl;
     sort(p.begin(),p.end(),greater<int>());
     cout << "Descending order: ";
     for(int i=0;i<n;i++){
        cout<<p[i]<< " ";
     }
    
}
