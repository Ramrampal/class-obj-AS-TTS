#include <bits/stdc++.h>
#include<algorithm>
using namespace std;

int main() {
	// your code goes here
	int n;
	 cin>> n;
	 vector<int> v(n);
	 for(int i=0;i<n;i++){
	     cin>>v[i];
	 }
 sort(v.begin(),v.end());
 for(int i=0;i<n;i++){
	     cout<<v[i]<<" ";
 }
 int sum=	 accumulate( v.begin(), v.end(),0);
 cout<<endl;
 cout<<sum;
 return 0;
}
